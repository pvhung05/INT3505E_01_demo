	"item": [
		{
			"name": "Get all books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200))\r",
							"\r",
							"{\r",
							"    const data = pm.response.json()\r",
							"\r",
							"    pm.test(\"Response body is an array\", () => pm.expect(data).to.be.an('array'))\r",
							"\r",
							"    pm.test(\"Each item has id/title/author\", () => {\r",
							"        data.forEach(item => {\r",
							"            pm.expect(item).to.have.property('id')\r",
							"            pm.expect(item).to.have.property('title')\r",
							"            pm.expect(item).to.have.property('author')\r",
							"        })\r",
							"    })\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					]
				}
			},
			"response": []
		},
		{
			"name": "Add a book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status 201\", () => pm.response.to.have.status(201))\r",
							"pm.test(\"JSON header\", () => pm.response.to.have.header(\"Content-Type\", \"application/json\"))\r",
							"\r",
							"{\r",
							"    const b = pm.response.json()\r",
							"\r",
							"    pm.test(\"Has id/title/author\", () => {\r",
							"        pm.expect(b).to.have.property(\"id\").that.is.a(\"number\")\r",
							"        pm.expect(b).to.have.property(\"title\", pm.variables.get(\"newTitle\"))\r",
							"        pm.expect(b).to.have.property(\"author\", pm.variables.get(\"newAuthor\"))\r",
							"    })\r",
							"\r",
							"    pm.environment.set(\"bookId\", b.id)\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"newTitle\", \"Title \" + Math.floor(Math.random()*100000));\r",
							"pm.variables.set(\"newAuthor\", \"Author \" + Math.floor(Math.random()*100000));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"title\": \"{{newTitle}}\",\r\n  \"author\": \"{{newAuthor}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/books",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get a book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status 200\", () => pm.response.to.have.status(200))\r",
							"\r",
							"{\r",
							"    const b = pm.response.json()\r",
							"    pm.test(\"Match created book\", () => {\r",
							"        pm.expect(b).to.have.property(\"id\", parseInt(pm.environment.get(\"bookId\"), 10))\r",
							"        pm.expect(b).to.have.property(\"title\")\r",
							"        pm.expect(b).to.have.property(\"author\")\r",
							"    })\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books/{{bookId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books",
						"{{bookId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Update a book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status 200\", () => pm.response.to.have.status(200));\r",
							"\r",
							"{\r",
							"    const b = pm.response.json();\r",
							"    pm.test(\"Updated fields and kept id unchanged\", () => {\r",
							"        pm.expect(b).to.have.property(\"id\", parseInt(pm.environment.get(\"bookId\"), 10));\r",
							"        pm.expect(b.title).to.match(/^Updated /);\r",
							"        pm.expect(b.author).to.match(/^Updated /);\r",
							"    });\r",
							"}\r",
							""
						],
